# Coloured ls output.
alias ls='ls --color'

# Coloured rspec output.
alias spec='rspec --color'

# Extract tar archive.
alias extar='tar --extract --file'

# Rsync defaults.
alias rs='rsync -vhuEtri --progress'

# Start wmii.
wmiipath=$(which wmii)
alias startwmii="startx $wmiipath"

# Git aliases.
alias g='git'
alias ga='git add'
alias gs='git status'
alias gl='git log --oneline'
alias gc='git commit -am'
alias gb='git branch'
alias gco='git checkout'
alias gm='git merge'
alias gd='git diff --color'
alias gpush='git push origin master'
alias gpull='git pull origin master'

# Not so commonly used Git aliases.
alias gitname='git config --global user.name'
alias gitemail='git config --global user.email'
