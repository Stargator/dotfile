# Git Version Control System integration.
autoload -Uz vcs_info
zstyle ':vcs_info:*' enable git
zstyle ':vcs_info:*' formats ' %s' ' %b'
zstyle ':vcs_info:*' actionformats ' %s' ' %b'
precmd () { vcs_info }

# Prompt appearance.
setopt PROMPT_SUBST # Needed for dynamic prompt substitution.

# Prompt line 1.
precmd() { print -P "\n%B%F{magenta}%n%f @ %F{magenta}%m%f on %F{magenta}%y%f in %F{magenta}%~%f${vcs_info_msg_0_}%F{magenta}${vcs_info_msg_1_}%f" }

# Prompt line 2.
PROMPT='%1~ ▶ %b' # (Bold) User @ Host on Line \n Working Directory ▶

# Right of prompt.
RPROMPT='%D{%H:%M:%S %A}' # Hour:Minute:Second Weekday
